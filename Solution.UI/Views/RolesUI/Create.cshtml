@model Solution.Common.ViewModel.RoleVM

@{
    ViewData["Title"] = "Create New Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="page-header">
    <h2>Role</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span><a href="@Url.Action("Index", "RolesUI")">Role</a></span></li>
            <li><span>Create</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>
<section class="card col-md-6">
    <header class="card-header">
        <h2 class="card-title">Create New Role</h2>
    </header>
    <div class="card-body">
        <form id="Createrole" asp-action="Create" method="post">
            <!-- Adjusted row with an offset to center the form -->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Role Name<span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" data-tooltip="Enter the role name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function resetForm() {
        document.getElementById('Createrole').reset();
    }
</script>
