@using Solution.Common.ViewModel
@model UserVM
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo float-left">
            <img src="~/img/logo.png" height="70" alt="Porto Admin" />
        </a>

        <div class="panel card-sign">
            <div class="card-title-sign mt-3 text-end">
                <h2 class="title text-uppercase font-weight-bold m-0"><i class="bx bx-user-circle me-1 text-6 position-relative top-5"></i> Sign Up</h2>
            </div>
            <div class="card-body">
                <form asp-controller="AccountUI" asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label for="Email">E-mail Address</label>
                        <input asp-for="Email" class="form-control form-control-lg" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Password">Password</label>
                        <input asp-for="Password" class="form-control form-control-lg" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="ConfirmPassword">Password Confirmation</label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-8">
                            <div class="checkbox-custom checkbox-default" hidden>
                                <input  type="checkbox" />
                                <label >I agree with <a href="#">terms of use</a></label>
                            </div>
                            <span  class="text-danger"></span>
                        </div>
                        <div class="col-sm-4 text-right" >
                            <button style="float: right;" type="submit" class="btn btn-primary mt-2">Sign Up</button>
                        </div>
                    </div>
                    <p class="text-center">Already have an account? <a asp-controller="AccountUI" asp-action="Index">Sign In!</a></p>

                </form>
            </div>
        </div>
    </div>
</section>
