@using Solution.UI.TagHelpers
@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>User</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span>User</span></li>
            <li><span>Index</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>
<!-- start: page -->
<section class="card">
    <header class="card-header">
        <div class="card-actions">
            <a 
               asp-controller="UserUI"
               asp-action="Create"
               class="btn btn-primary btn-square"
               title="Add">
                <i class="bi bi-plus"></i>
            </a>
        </div>
        <h2 class="card-title">User</h2>
    </header>
    <div class="card-body" >
        <table class="table table-bordered table-striped mb-0" id="UserTable">
            <thead>
                <tr>
                    <th>DisplayName</th>
                    <th>UserName </th>
                    <th>Email</th>
                    <th>IsCompany</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</section>
<!-- end: page -->
<script>
    $(document).ready(function () {
        LoadUser();
    });

    function LoadUser() {
        if ($.fn.dataTable.isDataTable("#UserTable")) {
            $("#UserTable").DataTable().clear().destroy();
        }

        $("#UserTable").DataTable({
            processing: true,
            serverSide: true,
            responsive: true,
            ajax: {
                url: "/UserUI/GetAllUsers",
                type: "GET",
                dataType: 'json',
                data: function (d) {
                    return {
                        draw: d.draw,
                        start: d.start,
                        length: d.length,
                        searchValue: d.search.value
                    };
                }
            },
            columns: [
                { data: "displayName", name: "DisplayName" },
                { data: "userName", name: "UserName" },
                { data: "email", name: "Email" },
                {
                    data: "isCompany",
                    name: "IsCompany",
                    render: function (data, type, row) {
                        var isChecked = data ? 'checked' : '';
                        return '<input type="checkbox" disabled ' + isChecked + ' />';
                    }
                },
                {
                    orderable: false,
                    className: 'actions-column',
                    render: function (data, type, row) {
                        return `
                                        <a href="/UserUI/Edit/${row.id}" class="icon-btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                            <a href="/UserUI/Details/${row.id}" class="icon-btn btn-info btn-sm">
                                        <i class="bi bi-info-square"></i>
                                    </a>
                                    <a onclick="confirmDelete('${row.id}')" class="icon-btn btn-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                `;

                    }
                }

            ]
        });
    }

    function confirmDelete(id) {
        debugger;
        const isConfirmed = confirm("Are you sure you want to delete?");
        if (isConfirmed) {
            deleteUser(id);
            ;
        }
    }
    function deleteUser(id) {
        $.ajax({
            url: '/UserUI/Delete',
            type: 'POST',
            data: { id: id },
            success: function (result) {
                if (result.success) {
                    alert(result.message);
                    $('#UserTable').DataTable().ajax.reload();
                } else {
                    alert(result.message);
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert("Error occurred: " + thrownError);
            }
        });
    }

</script>