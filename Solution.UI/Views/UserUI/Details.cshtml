@model Solution.Common.ViewModel.UserVM

@{
    ViewData["Title"] = "Details User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>Company</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span><a href="@Url.Action("Index", "UserUI")">Menu</a></span></li>
            <li><span>Edit</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>
<section class="card col-md-12">
    <header class="card-header">
        <div class="card-actions">
            <a href="@Url.Action("Edit", "UserUI", new { id = Model.Id })" class="btn btn-primary btn-square" title="Add">
                <i class="bi bi-pencil"></i>
            </a>
        </div>
        <h2 class="card-title">Menu Detail</h2>
    </header>
    <div class="card-body">
        <form asp-action="" method="post">
            <div class="row">
                <div class="col-md-6 ">
                    <label asp-for="DisplayName" class="control-label">Display Name</label>
                    <input asp-for="DisplayName" class="form-control" disabled />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="UserName" class="control-label">User Name</label>
                    <input asp-for="UserName" class="form-control" disabled />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" disabled />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="ProfileImage" class="control-label">Profile Image</label>
                    <input asp-for="ProfileImage" type="file" class="form-control" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
            </div>
            <br />
            <br />
            <br />

        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

