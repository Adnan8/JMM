@model Solution.Common.ViewModel.DDLDtlsVM

@{
    ViewData["Title"] = "Create New DDLDtls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>DDLDtls</h2>
    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span><a href="@Url.Action("Index", "DDLDtlsUI")">DDLDtls</a></span></li>
            <li><span>Create</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>

<section class="card col-md-6">
    <header class="card-header">
        <h2 class="card-title">Create New DDLDtls</h2>
    </header>
    <div class="card-body">
        <form id="createddldtls" asp-action="CreateDDl" method="post">
            <input type="hidden" asp-for="DdlhdrId" class="form-control" />
            <!-- Adjusted row with an offset to center the form -->
            <div class="row justify-content-md-center">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Ddltxt" class="control-label">Ddltxt</label>
                        <input asp-for="Ddltxt" class="form-control" />
                        <span asp-validation-for="Ddltxt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ddlorder" class="control-label">Ddlorder </label>
                        <input asp-for="Ddlorder" class="form-control" />
                        <span asp-validation-for="Ddlorder" class="text-danger"></span>
                    </div>
                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" onclick="resetForm()">Reset</button>
                        <a href="@Url.Action("Details", "DDlhdrUI")" class="btn btn-warning">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function resetForm() {
        document.getElementById('createddldtls').reset();
    }
</script>
