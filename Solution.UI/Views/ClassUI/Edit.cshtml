@using Solution.Business.Enums
@model Solution.Common.ViewModel.ClassVM

@{
    ViewData["Title"] = "Edit Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>Class</h2>
    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span><a href="@Url.Action("Index", "ClassesUI")">Class</a></span></li>
            <li><span>Edit</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>

<section class="card col-md-6">
    <header class="card-header">
        <h2 class="card-title">Edit Class</h2>
    </header>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="ClassId" class="form-control" hidden/>

                    <div class="form-group">
                        <label asp-for="ProgramDetails" class="control-label">Program Details</label>
                        <input asp-for="ProgramDetails" class="form-control" />
                        <span asp-validation-for="ProgramDetails" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GradeLevel" class="control-label">Grade Level</label>
                        <input asp-for="GradeLevel" class="form-control" />
                        <span asp-validation-for="GradeLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassTime" class="control-label">Class Time</label>
                        @* <select asp-for="ClassTime" class="form-select" asp-items="@Html.GetEnumSelectList<ClassTimeSlots>()">
                            <option value="">Select Class Time</option>
                        </select> *@
                        <select asp-for="ClassTime" asp-items="@Html.GetEnumSelectList<ClassTimeSlots>()" class="form-select">
                            <option value="">Select Class Time</option>
                        </select>

                        <span asp-validation-for="ClassTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxSize" class="control-label">Maximum Size</label>
                        <input asp-for="MaxSize" class="form-control" />
                        <span asp-validation-for="MaxSize" class="text-danger"></span>
                    </div>
                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="@Url.Action("Index", "ClassesUI")" class="btn btn-warning">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
