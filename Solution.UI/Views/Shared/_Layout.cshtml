	@if (themeDetails != null)
	{
		<style>
			/* Apply sidebar styles */
			.sidebar-left, .sidebar-left .nano, .sidebar-left .nano-content {
				background-color: @themeDetails.Primarybg !important;
				color: @themeDetails.Primaryfg !important;
			}

			/* Styles when sidebar is toggled/collapsed */
			.sidebar-left-collapsed, .sidebar-left-collapsed .nano, .sidebar-left-collapsed .nano-content {
				background-color: @themeDetails.Primarybg !important;
				color: @themeDetails.Primaryfg !important;
			}

			.nav-expanded{
				background-color: @themeDetails.Primarybg !important;
				color: @themeDetails.Primaryfg !important;
			}
			/* Apply header styles */
			.page-header {
				background-color: @themeDetails.Secondarybg !important;
				color: @themeDetails.Secondaryfg !important;
			}

			.sidebar-title {
				background-color: @themeDetails.Primarybg !important;
				color: @themeDetails.Primaryfg !important;
			}

			.sidebar-toggle {
				background-color: @themeDetails.Primarybg !important;
				color: @themeDetails.Primaryfg !important;
			}
			/* Apply body background and color */
			.inner-wrapper {
				background-color: @themeDetails.Tertiarybg !important;
				color: @themeDetails.Tertiaryfg !important;
			}

			ul.nav-main > li.nav-expanded > a {
				background: @themeDetails.Primarybg !important;
			}

			ul.nav-main li .nav-children {
				background: @themeDetails.Primarybg !important;
				box-shadow: 0px -3px 3px -3px rgba(0, 0, 0, 0.7) inset;
				display: none;
				padding: 10px 0;
			}
		</style>
	}
