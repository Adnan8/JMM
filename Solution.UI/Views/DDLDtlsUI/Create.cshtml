@model Solution.Common.ViewModel.DDLDtlsVM

@{
    ViewData["Title"] = "Create New DDLDtls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>DDLDtls</h2>
    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span><a href="@Url.Action("Index", "DDLDtlsUI")">DDLDtls</a></span></li>
            <li><span>Create</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>

<section class="card col-md-6">
    <header class="card-header">
        <h2 class="card-title">Create New DDLDtls</h2>
    </header>
    <div class="card-body">
        <form id="Createcompany" asp-action="Create" method="post">
            <div class="row">
                <class="col-md-12">
                    <div class="form-group">
                        <label asp-for="DdlhdrId" class="control-label">Ddlhdr Id</label>
                        <input asp-for="DdlhdrId" class="form-control" />
                        <span asp-validation-for="DdlhdrId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ddltxt" class="control-label">Ddltxt</label>
                        <input asp-for="Ddltxt" class="form-control" />
                        <span asp-validation-for="Ddltxt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ddlorder" class="control-label">Ddlorder </label>
                        <input asp-for="Ddlorder" class="form-control" />
                        <span asp-validation-for="Ddlorder" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data1" class="control-label">Data1 </label>
                        <input asp-for="Data1" class="form-control" />
                        <span asp-validation-for="Data1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data2" class="control-label">Data2 </label>
                        <input asp-for="Data2" class="form-control" />
                        <span asp-validation-for="Data2" class="text-danger"></span>
                    </div>
                    


                     <div class="form-group" style="float:right; margin-top: 20px;">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-primary" onclick="resetForm()">Reset</button>
                    <a href="@Url.Action("Index", "DDLDtlsUI")" class="btn btn-active-color-warning">Back</a>
                </div>
                </div>
            
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function resetForm() {
        document.getElementById('Createcompany').reset();
    }
</script>
