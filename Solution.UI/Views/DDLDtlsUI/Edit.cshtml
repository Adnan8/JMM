                    </div>
                    <div class="form-group">
                        <label asp-for="Ddlorder" class="control-label">Ddlorder </label>
                        <input asp-for="Ddlorder" class="form-control" />
                        <span asp-validation-for="Ddlorder" class="text-danger"></span>
                    </div>


            <!-- Add additional rows and columns as needed for remaining fields -->
            <br />
            <br />
                <div class="form-group text-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="@Url.Action("Index", "DDLDtlsUI")" class="btn btn-warning">Back</a>
                </div>
            </div>
            
            </div>
        </form>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
